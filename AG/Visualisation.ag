module {AG.Visualisation} {} {}
imports
{
import Hisp
import SKI
}

include "AG/Hisp.ag"
include "AG/SKI.ag"

attr HispExpr SKI
    syn visual :: String

attr SKI
    inh needParens :: Bool

sem Show {a} => HispExpr
    | Variable lhs.visual = show @name
    | Number lhs.visual = show @value
    | Application lhs.visual = '(' : @f.visual ++ " " ++ @x.visual ++ ")"
    | Lambda lhs.visual = '\\' : show @x ++ " -> " ++ @expr.visual

sem Show {a} => SKI
    | S lhs.visual = "S"
    | K lhs.visual = "K"
    | I lhs.visual = "I"
    | L lhs.visual = "L"
    | R lhs.visual = "R"
    | App lhs.visual = parens @lhs.needParens $ @x.visual ++ " " ++ @y.visual
          x.needParens = False
          y.needParens = True
    | Name lhs.visual = show @x
    | Constant lhs.visual = show @x

{
parens True x = "(" ++ x ++ ")"
parens False x = x

instance Show (HispExpr String) where
    show x = sem_HispExpr x

instance Show (SKI String) where
    show x = sem_SKI x False
}
